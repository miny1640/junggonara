@charset "EUC-KR";
/* 비밀번호 찾기*/
#pwdbody{
  font-family: "Nanum Gothic", sans-serif;
  
  }
#pwdimg{
vertical-align:top;

}
/*result form*/
.resultbody{
  font-family: "Nanum Gothic", sans-serif;
	color:black;
	font-size:20pt;
}
/*회원가입 폼*/

#memberbody{
  font-family: "Nanum Gothic", sans-serif;
	color:black;
 
	}
#p{
	display:block;
	margin-left:auto;
	margin-right:auto;
	
}
.membertable{
	text-align:center;
	width:400px;
	height:500px;
	margin-left: auto;
	margin-right: auto; 
 	border:4px solid #e5e5e5;
  	border-collapse:collapse;
	
}
option, select{
	  font-family: "Nanum Gothic", sans-serif;
	 padding: 3px 2px 2px 2px;
	 font-size: 10pt; 
	
}
input{
	  font-family: "Nanum Gothic", sans-serif;
	 font-size: 10pt; 
 	size:8px;
 	  border-radius:5px;
 	  background-color:white;
 	  border-right:none;
	border-top:none;
	border-left:1px solid #e5e5e5;
	border-bottom:1px solid #e5e5e5;
 	  
}
th{
	background-color:#F8EFFB;
	background: linear-gradient(to right bottom, #F8EFFB, white );
	border-right:3px solid #e5e5e5;
	border-top:none;
	border-left:none;
	border-bottom:3px solid #e5e5e5;
}
td{
background-color:white;
	border-right:none;
	border-top:none;
	border-left:1px solid #e5e5e5;
	border-bottom:1px solid #e5e5e5;
}
#memberdiv{
	text-align:center;
	
}
#money{
	background-color:white;
	height:auto;
	width: 24%;
	border:2px dashed black;
	margin:auto;
	text-align:center;
}
#memberinput{
	cursor:defalt;
	background-color:red;
	
}

/*로그인 폼*/
ul { line-height: 2em; }
small{ font-size:10pt;}

