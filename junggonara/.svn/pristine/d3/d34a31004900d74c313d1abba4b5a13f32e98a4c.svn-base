<%@page import="exe.dao.DepartmentDAO"%>
<%@page import="exe.entity.DepartmentEntity"%>
<%@page import="java.util.ArrayList"%>
<%@ page language="java" contentType="text/html; charset=EUC-KR"
   pageEncoding="EUC-KR"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="EUC-KR">
<title>글 작성</title>
<link href="https://fonts.googleapis.com/css?family=Gaegu&amp;subset=korean" rel="stylesheet">
<style>
fieldset{
   background-color:#FFFF00;
}

body{
   font-family: 'Gaegu', cursive;
}

input, select{
   font-family: 'Gaegu', cursive;
   size:5px;
   background-color:white;
}

th{
      background-color:#F8EFFB;
      background: linear-gradient(to right bottom, #F8EFFB, white );
      border-right:3px solid #e5e5e5;
      border-top:none;
      border-left:none;
      border-bottom:3px solid #e5e5e5;
}

td{
      background-color:white;
      border-right:none;
      border-top:none;
      border-left:1px solid #e5e5e5;
      border-bottom:5px solid #e5e5e5;
}
</style>
<script>
	function itemChange(){
<%%>
	}
</script>
</head>
<body>
<br>

<input type="submit" value="◀◁◀" style="height:50px; width:100px; background-color:white; 
border:2px lightyellow solid; color:black;font-size:10pt" />


<!-- 중고나라 이미지 -->
<div align="center">
   <img src="image/main_logo.png" width="200" height="160"/>
<form action="boardMain.do" method="post">

</form><p style="text-align:center;">
      <h1>[글 작성]</h1>
  		 </p>
<form action="boardInsert.do" method="post"> <!-- 입력하면 보드인서트로 이동 -->
   <fieldset  style="margin-left:30%; margin-right:30%; background-color:white;">
   <p>원하는 작성을 선택하세요.(1개만 선택 가능)</p>
         <label>
            <input type="radio" name="sale_purchase" value="s"/>판매
         </label>
         <label> 
            <input type="radio" name="sale_purchase" value="p"/>구입
         </label>
   </fieldset>
   <br/>
<table height="700" width="700" style="border:2px solid #e5e5e5; border-collapse:collapse;"> <!-- 테이블 테두리 -->
   <tr>
         <th><font size="5">제목</font></th>
         <td><input type="text" name="title" style="text-align:center; width:250px; height:20px; letter-spacing: 5px; font-size:12pt;"/></td>
   </tr>
<%
	ArrayList<DepartmentEntity> list = new ArrayList<DepartmentEntity>();
	DepartmentDAO dao = new DepartmentDAO();
	list = dao.selectAll();
%>
   <tr>
         <th><font color="black" size="5" >학과</font></th>  
<%
	if(list.size()==0){
%>
	<td>
		 <select name="department" width="100%" style="text-align:center; width:250px; height:20px; font-size:12pt;">
      <option value="data">데이터사이언스학과</option>
      <option value="global">국제통상학과</option>
      <option value="center">중앙아시아학과</option>
      <option value="computer">컴퓨터공학과</option>
      <option value="electric">전자공학과</option>
      <option value="economy">경제학과</option>
      <option value="management">경영학과</option>
   </select>
	</td>
<%
	}else{
%> 
         <td>      <!-- 학과선택 -->
         <select id="dept_code" onchange="itemChange()" style="text-align:center; width:250px; height:20px; font-size:12pt;" >
<%
		for(DepartmentEntity dept : list){
%>               
			<option value="<%=dept.getDept_code()%>"><%=dept.getDept_name() %></option>
<%
		}
%>
         </select>
      </td>
<%
	}
%>
   </tr>
   <tr>
        <th><font size="5">책 이름</font></th>
        <td><input type="text" name="bk_code" style="text-align:center;width:250px;height:20px;font-size:12pt "/>
        </td> 
   </tr>
   <tr>
         <th><font size="5">가격</font></th>
         <td><input type="text" name="price" placeholder="숫자만 기입해주세요/"/></td>
   </tr>
   <tr>
         <th><font size="5">게시자</font></th>
         <td><input type="text" name="이름" placeholder="학번으로 기입해주세요/" /></td>
      </tr>
   
   <tr>
      <th><font size="5">내용</font></th>
      <td><textarea name="content" rows="5" cols="50" ></textarea></td>
   </tr>
   <tr>
      <th><font size="5">첨부파일</font></th>
      <td><input type="file"/></td>
   </tr>
   <tr>
      <td colspan="2" align="center">    <!-- 두칸을 하나로 합침 -->
            <input type="submit" value="작성 완료"/>
            <input type="reset" value="다시쓰기"/>
      </td>
   </tr>
</table>
</form>
</div>
</body>
</html>